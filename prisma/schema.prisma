generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model refrigerator {
  id          Int      @id @default(autoincrement())
  userId      String   // user_id
  name        String   // name
  quantity    String   // 個数
  buyDate     DateTime @default(now()) // buy_date (デフォルトは今日)
  trashDate   DateTime? // trash_date (空でもOK)
  createdAt   DateTime @default(now())
}